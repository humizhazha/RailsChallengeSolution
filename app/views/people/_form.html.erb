<div class="container">
  <div class="col-12">
<div class='row'>
  <div class='col-12'>
    <%= form_for(@person, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
  <div class="control-label col-sm-2">
    <%= f.label :first_name %>
  </div>
  <div class="col-sm-8">
    <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name", autofocus: true %>
  </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :last_name %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last name" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :gender %>
    </div>
    <div class="col-sm-8">
      <%= f.select :gender, options_for_select(@gender_list) %>
      <%#= f.text_field :gender, class: "form-control", placeholder: "Enter gender" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :weapon %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :weapon, class: "form-control", placeholder: "Enter weapon" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :vehicle %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :vehicle, class: "form-control", placeholder: "Enter vehicle" %>
    </div>
  </div>

  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= f.label :species %>
    </div>
    <div class="col-sm-8">
      <%= f.text_field :species, class: "form-control", placeholder: "Enter species" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit("Submit" , class: 'btn btn-primary btn-lg') %>
    </div>
  </div>
  <div class="col-sm-offset-2 col-sm-10">
    <%= link_to "Cancel", people_path, class: 'btn btn-primary btn-lg' %>
  </div>
  <% end %>

  </div>
  </div>
  </div>
</div>
</div>
